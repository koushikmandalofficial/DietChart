<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgetPasswordActivity"
    android:background="#E8E6E6">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ForgetPasswordActivity"
        android:background="#E8E6E6">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/logo"
            android:gravity="center"
            android:text="Reset Your Password"
            android:textColor="#C9696964"
            android:textSize="@dimen/_26sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_alignParentEnd="true"
            android:text="Fill The All Details"
            android:textColor="#79696964"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/textView1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/triangle"
            android:gravity="center"
            android:hint="Username" />

    <LinearLayout
        android:id="@+id/llspiner"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/name"
        android:background="@drawable/triangle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="52dp"
        android:paddingRight="20dp">

        <Spinner
            android:id="@+id/spiner2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <EditText
        android:id="@+id/answer"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/llspiner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/triangle"
        android:gravity="center"
        android:hint="Security Question Answer" />

    <EditText
        android:id="@+id/etpass"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/answer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/triangle"
        android:gravity="center"
        android:hint="Enter New Password" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvresetpass"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_below="@id/etpass"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/primarycolor"
        android:elevation="100dp"
        android:outlineAmbientShadowColor="@color/primarycolor"
        android:outlineSpotShadowColor="@color/primarycolor"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="Reset Password"
            android:textColor="#E8E6E6"
            android:textSize="15dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvresetpass"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@id/text2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an accont ?"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/sigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In Here"
            android:textColor="@color/primarycolor"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>








</RelativeLayout>
    </ScrollView>
</LinearLayout>